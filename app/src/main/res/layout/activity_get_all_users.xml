<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="userAuthentication.activities.getAllUsersActivity">


    <TextView
        android:id="@+id/textOfPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lai apskatītu detalizētāku informāciju, nospiez uz lietotāja vārda"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/titleOfPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visi lietotāji"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="186dp"
        android:paddingLeft = "16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userRecyclerView"
            android:layout_width="381dp"
            android:layout_height="577dp"
            tools:listitem="@layout/item_user" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>